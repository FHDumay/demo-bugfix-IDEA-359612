<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd" objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1727099812886-1" author="Fabien H. Dumay">
        <createSequence incrementBy="50" sequenceName="revinfo_seq" startValue="1"/>
    </changeSet>
    <changeSet id="1727099812886-2" author="Fabien H. Dumay">
        <createTable tableName="pgn_games">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_pgn_games"/>
            </column>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="created_date" type="DATETIME"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="last_modified_date" type="DATETIME"/>
            <column name="version" type="INT"/>
        </createTable>
    </changeSet>
    <changeSet id="1727099812886-3" author="Fabien H. Dumay">
        <createTable tableName="pgn_games_aud">
            <column name="rev" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_pgn_games_aud"/>
            </column>
            <column name="created_by" type="bytea"/>
            <column name="created_date" type="DATETIME"/>
            <column name="last_modified_by" type="bytea"/>
            <column name="last_modified_date" type="DATETIME"/>
            <column name="version" type="INT"/>
            <column name="revtype" type="SMALLINT"/>
            <column name="id" type="bytea">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_pgn_games_aud"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1727099812886-4" author="Fabien H. Dumay">
        <createTable tableName="revinfo">
            <column name="rev" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_revinfo"/>
            </column>
            <column name="revtstmp" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1727099812886-5" author="Fabien H. Dumay">
        <addForeignKeyConstraint baseColumnNames="rev" baseTableName="pgn_games_aud" constraintName="FK_PGN_GAMES_AUD_ON_REV"
                                 referencedColumnNames="rev" referencedTableName="revinfo"/>
    </changeSet>

</databaseChangeLog>